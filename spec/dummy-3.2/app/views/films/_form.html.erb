<%= slider_form_for(@film) do |f| %>
  <% if @film.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@film.errors.count, "error") %> prohibited this film from being saved:</h2>

      <ul>
      <% @film.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :director %><br>
    <%= f.text_field :director %>
  </div>
  <div class="field">
    <%= f.slider_field :rating, label: { name: 'Score:', append: ' out of 10'}, min: 0, max: 10, color: '#3D82DB' %>
  </div>
  <div class="field">
    <%= slider_field_tag :tickets, 10, label: { name: 'Number of Tickets:', append: ' out of 10'}, min: 0, max: 10, step: 1, color: '#ECECEC' %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
